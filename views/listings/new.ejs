<% layout("/layouts/boilerplate") %>

<div class="row  mt-3" >
    <div class="col-8 offset-2">
        <br>
        <h2>Create a New Listings </h2>
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" 
                placeholder="enter the title" 
                type="text" class="form-control" required>
                <div class="valid-feedback">Title looks good</div>
    
            </div>
            <br>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
    
                <textarea name="listing[description]" placeholder="enter the detail description" class="form-control"  required></textarea>
                <div class="invalid-feedback">Description should be short</div>
            </div>
            
            <br>
       
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
    
                <input name="listing[image]" type="file"class="form-control">
            </div>  
            <br>
            <div class="row">
                <div class="mb-3  col-md-4">
                    <label for="price" class="form-label">Price</label>
        
                    <input name="listing[price]" placeholder="enter the price" class="form-control"  required>
                    <div class="invalid-feedback">Please enter the valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
        
                    <input name="listing[country]" placeholder="enter the country" type="text" class="form-control"  required>
                    <div class="invalid-feedback">Please enter the valid Country</div>
        
                </div>
            </div>           
            <br>
            <div class="mb-3">
                <label for="loaction" class="form-label">Location</label>
    
                <input name="listing[location]" placeholder="enter the location" type="text"class="form-control" required>
                <div class="invalid-feedback">Please Enter the correct location</div>
    
            </div>
            <br>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
    
        </form>
    
    </div>
    
</div>
    

